rules_version = '2';

// Firebase Storage Security Rules for Berjaya WMS
service firebase.storage {
  match /b/{bucket}/o {

    // Inspection template images - allow authenticated users to read/write
    match /inspection-templates/{templateId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Inspection photos - allow authenticated users to read/write
    match /inspection-photos/{inspectionId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Waste report images - allow authenticated users to upload photos (v7.38.2)
    match /waste_reports/{reportId}/{imageFile} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');  // Only images
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
